{
  "compilerOptions": {
    "typeRoots": ["types/", "node_modules/@types"],
    "lib": ["ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "target": "ESNext",
    "module": "CommonJS",
    
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node"],
  }
}
